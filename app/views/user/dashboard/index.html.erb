<div class="container my-5">
  <h1 class="text-center mb-4">User Dashboard</h1>

  <div class="card p-4 shadow-sm mb-4">
    <h4 class="mb-3">Wallet Balance</h4>
    <p class="fs-5">
      <strong>₹<%= number_with_precision(@user.wallet_balance, precision: 2) %></strong>
    </p>
  </div>

  <% if @active_loan %>
    <div class="card p-4 shadow-sm">
      <h4 class="mb-3">Active Loan Details</h4>
      <p><strong>Principal:</strong> ₹<%= @active_loan.principal_amount %></p>
      <p><strong>Interest Rate:</strong> <%= @active_loan.interest_rate %>%</p>
      <p><strong>Total Repaid:</strong> ₹<%= @active_loan.total_repaid_amount %></p>
    </div>
  <% else %>
    <div class="alert alert-info mt-4">
      No active loans at the moment.
    </div>
  <% end %>
</div>
