<div class="container my-5">
  <h1 class="mb-4 text-center">Request a Loan</h1>

  <div class="card shadow p-4">
    <%= form_with model: [:user, @loan], local: true do |f| %>
      <div class="mb-3">
        <%= f.label :principal_amount, 'Loan Amount (â‚¹)', class: "form-label" %>
        <%= f.number_field :principal_amount, step: 100, min: 100, required: true, class: "form-control", placeholder: "Enter loan amount" %>
      </div>

      <div class="mb-3">
        <%= f.label :interest_rate, 'Interest Rate (%)', class: "form-label" %>
        <%= f.number_field :interest_rate, step: 0.1, min: 0.1, required: true, class: "form-control", placeholder: "Enter interest rate" %>
      </div>

      <%= f.submit "Submit Request", class: "btn btn-primary text-center" %>
    <% end %>
  </div>
</div>
