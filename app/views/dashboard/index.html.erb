<% if @user.admin? %>
  <h3>Pending Loan Requests</h3>
  <% @pending_loans.each do |loan| %>
    <div>
      <p><strong>User:</strong> <%= loan.user.name %></p>
      <p><strong>Amount:</strong> <%= loan.principal_amount %></p>
      <p><strong>Rate:</strong> <%= loan.interest_rate %>%</p>
      <%= link_to "Approve", accept_loan_path(loan), method: :post %>
      <%= link_to "Reject", reject_loan_path(loan), method: :post %>
      <%= link_to "Adjust", new_loan_loan_adjustment_path(loan) %>
    </div>
    <hr>
  <% end %>
<% else %>
  <%= link_to "Request New Loan", new_loan_path %>

  <h3>My Loans</h3>
  <% @loans.each do |loan| %>
    <div>
      <p><strong>Status:</strong> <%= loan.state %></p>
      <p><strong>Amount:</strong> <%= loan.principal_amount %> | <strong>Rate:</strong> <%= loan.interest_rate %>%</p>
      <% if loan.waiting_for_adjustment_acceptance? || loan.approved? %>
        <%= button_to "Accept", accept_loan_path(loan), method: :post %>
        <%= button_to "Reject", reject_loan_path(loan), method: :post %>
      <% end %>
      <% if loan.open? %>
        <%= button_to "Repay", repay_loan_path(loan), method: :post %>
      <% end %>
    </div>
    <hr>
  <% end %>
<% end %>