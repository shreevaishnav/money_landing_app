<!-- Sidebar -->
<% if user_signed_in? %>
  <div class="col-md-3 col-lg-2 bg-dark text-white min-vh-100 p-3">
    <h4 class="text-center mb-4">
      <%= current_user.admin? ? "Admin Panel" : "User Panel" %>
    </h4>

    <ul class="nav flex-column">
      <li class="nav-item">
        <% if current_user.admin? %>
          <%= link_to 'Dashboard', admin_dashboard_path, class: 'nav-link text-white' %>
        <% else %>
          <%= link_to 'Dashboard', user_dashboard_path, class: 'nav-link text-white' %>
        <% end %>
      </li>

      <% if current_user.admin? %>
        <li class="nav-item">
          <%= link_to 'All Loans', admin_loans_path, class: 'nav-link text-white' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Users', admin_users_path, class: 'nav-link text-white' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'My Loans', user_loans_path, class: 'nav-link text-white' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Request New Loan', new_user_loan_path, class: 'nav-link text-white' %>
        </li>
      <% end %>

      <li class="nav-item mt-4">
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light w-100' %>
      </li>
    </ul>
  </div>
<% end %>

